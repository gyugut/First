<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F4F4"
    tools:context=".SupportActivity">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="450dp"
        android:layout_height="150dp"
        android:background="@drawable/img_roundbackground_black"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="90dp"
            android:text="Support"
            android:textColor="@color/white"
            android:textSize="24dp" />

        <ImageButton
            android:id="@+id/button_support_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="90dp"
            android:padding="0dp"
            app:srcCompat="@drawable/img_home_black" />


        <ImageButton
            android:id="@+id/button_support_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="90dp"
            android:padding="0dp"
            app:layout_constraintBottom_toTopOf="@+id/imageView_Status"
            app:srcCompat="@drawable/img_menu_black" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView_component_Support"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:srcCompat="@drawable/img_quartercircle_black" />

    <EditText
        android:id="@+id/editText_support_support"
        android:layout_width="304dp"
        android:layout_height="375dp"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="150dp"
        android:background="@drawable/xml_edittext_large"
        android:ems="10"
        android:inputType="text"
        android:text="문의할 내용을 입력해주세요"
        android:textAlignment="center"
        android:textColor="#A4A4A4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <ImageView
        android:id="@+id/imageView_Contract_Support"
        android:layout_width="31dp"
        android:layout_height="37dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.143"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_support_support"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/img_contract_black" />

    <Button
        android:id="@+id/button_support_submit"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/xml_button_white_small"
        android:text="완료"
        app:layout_constraintBottom_toTopOf="@+id/button_support_back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_support_support" />

    <Button
        android:id="@+id/button_support_back"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/xml_button_white_small"
        android:text="돌아가기"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>