<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuActivity">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="450dp"
        android:layout_height="570dp"
        android:layout_marginBottom="104dp"
        android:background="@drawable/img_bigbackground_black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">


        <TextView
            android:id="@+id/textView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="43dp"
            android:layout_marginTop="90dp"
            android:layout_marginEnd="73dp"
            android:layout_marginBottom="536dp"
            android:text="Menu"
            android:textColor="@color/white"
            android:textSize="24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/button_menu_home"
            app:layout_constraintHorizontal_bias="0.025"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <ImageButton
            android:id="@+id/button_menu_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="0dp"
            app:layout_constraintEnd_toStartOf="@+id/button_menu_menu"
            app:layout_constraintStart_toEndOf="@+id/textView"
            app:layout_constraintTop_toTopOf="@+id/button_menu_menu"
            app:srcCompat="@drawable/img_home_black" />

        <ImageButton
            android:id="@+id/button_menu_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="90dp"
            android:layout_marginEnd="60dp"
            android:padding="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/button_menu_home"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/img_menu_black" />

        <Button
            android:id="@+id/button_menu_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="63dp"
            android:layout_marginEnd="30dp"
            android:backgroundTint="@color/black"
            android:text="Profile   ⚬"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="@+id/button_menu_menu"
            app:layout_constraintTop_toBottomOf="@+id/button_menu_menu" />

        <Button
            android:id="@+id/button_menu_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/black"
            android:text="Setting  ⚬"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="@+id/button_menu_profile"
            app:layout_constraintTop_toBottomOf="@+id/button_menu_profile" />

        <Button
            android:id="@+id/button_menu_notice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/black"
            android:text=" Notice    ⚬"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="@+id/button_menu_setting"
            app:layout_constraintTop_toBottomOf="@+id/button_menu_setting" />

        <Button
            android:id="@+id/button_menu_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="150dp"
            android:backgroundTint="@color/black"
            android:text="Search   ⚬"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/button_menu_notice"
            app:layout_constraintStart_toStartOf="@+id/button_menu_notice" />

        <Button
            android:id="@+id/button_menu_support"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/black"
            android:text="Support ⚬"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="@+id/button_menu_search"
            app:layout_constraintTop_toBottomOf="@+id/button_menu_search" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
        app:srcCompat="@drawable/img_quartercircle_black" />

</androidx.constraintlayout.widget.ConstraintLayout>